    <refentry id="functions.mysql_character_set_name" display-name="0">
      <refmeta>
        <refentrytitle>mysql_character_set_name</refentrytitle>
      </refmeta>
      <refnamediv>
        <refname>mysql_character_set_name</refname>
        <refpurpose>returns the name of the current client character set</refpurpose>
      </refnamediv>
      <refsect1 role="description">
        <methodsynopsis>
          <type>const char *</type>
          <methodname>mysql_character_set_name</methodname>
           <methodparam><type>MYSQL *</type><parameter>mysql</parameter></methodparam>

        </methodsynopsis>
        <para>Returns the name of the current client character set for the specified connection. </para>
      </refsect1>
      <refsect1 role="parameters">
        <title>Parameters</title>
          <variablelist>
           <varlistentry><term><parameter>mysql</parameter></term><listitem><para>&param.mysql;</para></listitem></varlistentry>

          </variablelist>
      </refsect1>
      <refsect1 role="returnvalue">
        <title>Return value</title>
        <para>The default client character set for the specified connection</para>
      </refsect1>
      <refsect1 role="note">
        <note>
          <title></title>  
        </note> 
      </refsect1>
