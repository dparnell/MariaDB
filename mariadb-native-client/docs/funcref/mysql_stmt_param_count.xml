    <refentry id="functions.mysql_stmt_param_count" display-name="0">
      <refmeta>
        <refentrytitle>mysql_stmt_param_count</refentrytitle>
      </refmeta>
      <refnamediv>
        <refname>mysql_stmt_param_count</refname>
        <refpurpose>Returns the number of parameter for the given statement</refpurpose>
      </refnamediv>
      <refsect1 role="description">
        <methodsynopsis>
          <type>unsigned long</type>
          <methodname>mysql_stmt_param_count</methodname>
           <methodparam><type>MYSQL_STMT *</type><parameter>stmt</parameter></methodparam>

        </methodsynopsis>
        <para>Returns the number of parameter markers present in the prepared statement.</para>
      </refsect1>
      <refsect1 role="parameters">
        <title>Parameters</title>
          <variablelist>
           <varlistentry><term><parameter> stmt</parameter></term><listitem><para>&param.stmt;</para></listitem></varlistentry>
          </variablelist>
      </refsect1>
      <refsect1 role="returnvalue">
        <title>Return value</title>
        <para>Returns the number of parameters in a prepared statement</para>
      </refsect1>
      <refsect1 role="returnvalue">
        <note>
          <title></title>
          <para>This function will not deliver a valid result until <function>mysql_stmt_prepare()</function> was called.</para>
        </note> 
      </refsect1>
      <refsect1 role="seealso">
        <title>See also</title>
        <para><function>mysql_stmt_prepare()</function>, <function>mysql_stmt_field_count()</function></para>
      </refsect1>
    </refentry>
