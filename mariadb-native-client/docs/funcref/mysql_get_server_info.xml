    <refentry id="functions.mysql_get_server_info" display-name="0">
      <refmeta>
        <refentrytitle>mysql_get_server_info</refentrytitle>
      </refmeta>
      <refnamediv>
        <refname>mysql_get_server_info</refname>
        <refpurpose>Get server info</refpurpose>
      </refnamediv>
      <refsect1 role="description">
        <methodsynopsis>
          <type>const char *</type>
          <methodname>mysql_get_server_info</methodname>
           <methodparam><type>MYSQL *</type><parameter>mysql</parameter></methodparam>

        </methodsynopsis>
        <para>Retrieves the server version</para>
      </refsect1>
      <refsect1 role="parameters">
        <title>Parameters</title>
          <variablelist>
           <varlistentry><term><parameter>mysql</parameter></term><listitem><para>&param.mysql;</para></listitem></varlistentry>

          </variablelist>
      </refsect1>
      <refsect1 role="returnvalue">
        <title>Return value</title>
        <para>Returns the server version or NULL on failure.</para>
      </refsect1>
      <refsect1 role="returnvalue">
        <note>
          <title></title>
          <para>To obtain the numeric server version please use <function>mysql_get_server_version()</function></para>
        </note> 
      </refsect1>
      <refsect1 role="seealso">
        <title>See also</title>
        <para><function>mysql_get_server_version()</function>, <function>mysql_get_client_info</function></para>
      </refsect1>
    </refentry>
